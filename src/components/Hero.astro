---
import SectionWrapper from './ui/SectionWrapper.astro';
import Badge from './ui/Badge.astro';
import GradientText from './ui/GradientText.astro';
import Button from './ui/Button.astro';
import GitHubStarButton from './GitHubStarButton.astro';
import HeroNetwork from './HeroNetwork.astro';
import { hero, site } from '../data/content';
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background glow -->
  <div
    class="pointer-events-none absolute inset-0 bg-[radial-gradient(ellipse_60%_50%_at_50%_40%,rgba(0,212,255,0.08),transparent_70%)]"
    aria-hidden="true"
  />

  <!-- Network animation -->
  <HeroNetwork />

  <SectionWrapper class="relative z-10 text-center">
    <div class="flex flex-col items-center gap-6">
      <Badge>{hero.badge}</Badge>

      <h1 class="max-w-3xl text-4xl font-bold leading-[1.1] tracking-tight md:text-6xl lg:text-7xl">
        <GradientText as="span">{hero.headline}</GradientText>
      </h1>

      <p class="max-w-xl text-lg text-text-secondary md:text-xl">
        {hero.subheadline}
      </p>

      <div class="flex flex-wrap items-center justify-center gap-4 pt-4">
        <GitHubStarButton size="large" />
        <Button href={site.docsUrl} variant="secondary" target="_blank" rel="noopener noreferrer">
          {hero.ctaSecondary}
        </Button>
      </div>
    </div>
  </SectionWrapper>
</section>
