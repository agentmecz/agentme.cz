---
import { t, type Locale } from '../data/i18n';

interface Props { locale: Locale }
const { locale } = Astro.props;
const { site, footer } = t(locale);
---

<footer class="border-t border-border">
  <div class="mx-auto max-w-[1200px] px-6 py-8">
    <div class="flex flex-col items-center gap-4 sm:flex-row sm:justify-between">
      <span class="text-sm font-semibold text-text-secondary">AgentMe</span>

      <nav class="flex flex-wrap items-center justify-center gap-x-6 gap-y-2" aria-label="Footer">
        <a
          href={site.repoUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="text-sm text-text-secondary transition-colors hover:text-text-primary"
        >
          GitHub
        </a>
        <a
          href={site.docsUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="text-sm text-text-secondary transition-colors hover:text-text-primary"
        >
          Docs
        </a>
        <a
          href="/llms.txt"
          class="text-sm text-text-secondary transition-colors hover:text-text-primary"
        >
          llms.txt
        </a>
      </nav>

      <span class="text-xs text-text-secondary">{footer.copyright}</span>
    </div>
  </div>
</footer>
