---
import { site } from '../data/content';

interface Props {
  class?: string;
  size?: 'default' | 'large';
}

const { class: className = '', size = 'default' } = Astro.props;

const sizeClasses = {
  default: 'px-6 py-3 text-sm',
  large: 'px-8 py-4 text-base',
};
---

<a
  href={site.repoUrl}
  target="_blank"
  rel="noopener noreferrer"
  class:list={[
    'github-star-btn inline-flex items-center gap-2 rounded-lg bg-gradient-to-r from-accent-cyan to-accent-purple font-medium text-bg-primary transition-all duration-300 hover:shadow-[0_0_24px_rgba(0,212,255,0.3)] hover:scale-[1.02] cursor-pointer',
    sizeClasses[size],
    className,
  ]}
>
  <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
    <path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12" />
  </svg>
  <span>Star on GitHub</span>
  <span
    class="github-star-count ml-1 rounded-md bg-white/20 px-2 py-0.5 text-xs font-semibold tabular-nums"
    data-repo={site.repo}
  ></span>
</a>

<script>
  async function fetchStarCount() {
    const els = document.querySelectorAll<HTMLElement>('.github-star-count');
    if (!els.length) return;

    const repo = els[0].dataset.repo;
    if (!repo) return;

    try {
      const cached = sessionStorage.getItem(`gh-stars-${repo}`);
      if (cached) {
        const { count, ts } = JSON.parse(cached);
        if (Date.now() - ts < 300_000) {
          els.forEach((el) => (el.textContent = formatCount(count)));
          return;
        }
      }

      const res = await fetch(`https://api.github.com/repos/${repo}`, {
        headers: { Accept: 'application/vnd.github.v3+json' },
      });
      if (!res.ok) return;

      const data = await res.json();
      const count = data.stargazers_count;
      sessionStorage.setItem(`gh-stars-${repo}`, JSON.stringify({ count, ts: Date.now() }));
      els.forEach((el) => (el.textContent = formatCount(count)));
    } catch {
      // Graceful degradation â€” button works without count
    }
  }

  function formatCount(n: number): string {
    if (n >= 1000) return `${(n / 1000).toFixed(1)}k`;
    return String(n);
  }

  fetchStarCount();
  document.addEventListener('astro:page-load', fetchStarCount);
</script>
