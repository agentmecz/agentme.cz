---
import SectionWrapper from './ui/SectionWrapper.astro';
import FadeIn from './ui/FadeIn.astro';
import { techStack } from '../data/content';
---

<SectionWrapper>
  <FadeIn>
    <h2 class="mb-16 text-center text-3xl font-bold tracking-tight md:text-4xl lg:text-5xl">
      {techStack.headline}
    </h2>
  </FadeIn>

  <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5">
    {techStack.items.map((item, i) => (
      <FadeIn delay={i * 60}>
        <div class="flex items-center justify-center rounded-xl border border-border bg-bg-card/30 px-4 py-5 text-center transition-all duration-300 hover:border-border-glow hover:bg-bg-card/60 hover:scale-[1.03]">
          <span class="text-sm font-medium text-text-secondary">{item.name}</span>
        </div>
      </FadeIn>
    ))}
  </div>
</SectionWrapper>
