---
import { t, getAlternateLang, getLocalePath, localeLabels, type Locale } from '../data/i18n';

interface Props { locale: Locale }
const { locale } = Astro.props;
const { site, nav } = t(locale);
const altLocale = getAlternateLang(locale);
const altPath = getLocalePath(altLocale);

const links = [
  { label: nav.protocol, href: '#protocol' },
  { label: nav.trust, href: '#trust' },
  { label: nav.payments, href: '#payments' },
  { label: nav.faq, href: '#faq' },
];
---

<nav
  class="site-nav fixed top-0 left-0 right-0 z-50 transition-all duration-300"
  aria-label="Main"
>
  <div class="mx-auto flex max-w-[1200px] items-center justify-between px-6 py-4">
    <a href={getLocalePath(locale)} class="text-sm font-semibold text-text-primary transition-colors hover:text-accent-cyan focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent-cyan">
      AgentMesh
    </a>

    <!-- Desktop nav -->
    <div class="hidden items-center gap-6 sm:flex">
      {links.map((link) => (
        <a
          href={link.href}
          class="text-sm text-text-muted transition-colors hover:text-text-secondary focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent-cyan"
        >
          {link.label}
        </a>
      ))}
      <a
        href={site.repoUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-1.5 text-sm text-text-muted transition-colors hover:text-text-secondary focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent-cyan"
      >
        <svg class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
          <path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12" />
        </svg>
        GitHub
      </a>
      <!-- Language switcher -->
      <a
        href={altPath}
        class="rounded-md border border-border px-2 py-1 text-xs font-medium text-text-muted transition-colors hover:border-border-glow hover:text-text-secondary"
        aria-label={`Switch to ${altLocale === 'cs' ? 'Czech' : 'English'}`}
      >
        {localeLabels[altLocale]}
      </a>
    </div>

    <!-- Mobile hamburger -->
    <button
      class="nav-toggle flex h-10 w-10 items-center justify-center rounded-lg text-text-secondary transition-colors hover:text-text-primary focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent-cyan sm:hidden"
      aria-label={nav.toggleMenu}
      aria-expanded="false"
      type="button"
    >
      <svg class="nav-icon-open h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M4 6h16" /><path d="M4 12h16" /><path d="M4 18h16" />
      </svg>
      <svg class="nav-icon-close hidden h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M18 6 6 18" /><path d="m6 6 12 12" />
      </svg>
    </button>
  </div>

  <!-- Mobile menu panel -->
  <div class="nav-mobile hidden border-t border-border bg-bg-primary/95 backdrop-blur-lg sm:hidden">
    <div class="flex flex-col px-6 py-4 gap-1">
      {links.map((link) => (
        <a
          href={link.href}
          class="nav-mobile-link rounded-lg px-3 py-2.5 text-sm text-text-secondary transition-colors hover:bg-bg-card hover:text-text-primary"
        >
          {link.label}
        </a>
      ))}
      <a
        href={site.repoUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="nav-mobile-link inline-flex items-center gap-2 rounded-lg px-3 py-2.5 text-sm text-text-secondary transition-colors hover:bg-bg-card hover:text-text-primary"
      >
        <svg class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
          <path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12" />
        </svg>
        GitHub
      </a>
      <!-- Mobile language switcher -->
      <a
        href={altPath}
        class="nav-mobile-link rounded-lg px-3 py-2.5 text-sm text-text-secondary transition-colors hover:bg-bg-card hover:text-text-primary"
      >
        {altLocale === 'cs' ? 'ÄŒesky' : 'English'}
      </a>
    </div>
  </div>
</nav>

<script>
  function initNav() {
    const nav = document.querySelector<HTMLElement>('.site-nav');
    const toggle = document.querySelector<HTMLButtonElement>('.nav-toggle');
    const mobile = document.querySelector<HTMLElement>('.nav-mobile');
    const iconOpen = document.querySelector<HTMLElement>('.nav-icon-open');
    const iconClose = document.querySelector<HTMLElement>('.nav-icon-close');
    if (!nav || !toggle || !mobile || !iconOpen || !iconClose) return;

    let open = false;

    function setOpen(val: boolean) {
      open = val;
      toggle!.setAttribute('aria-expanded', String(open));
      mobile!.classList.toggle('hidden', !open);
      iconOpen!.classList.toggle('hidden', open);
      iconClose!.classList.toggle('hidden', !open);
    }

    toggle.addEventListener('click', () => setOpen(!open));

    // Close on link click
    mobile.querySelectorAll('.nav-mobile-link').forEach((link) => {
      link.addEventListener('click', () => setOpen(false));
    });

    // Close on escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && open) setOpen(false);
    });

    // Scroll styling
    function onScroll() {
      if (window.scrollY > 80) {
        nav!.classList.add('nav-scrolled');
      } else {
        nav!.classList.remove('nav-scrolled');
      }
    }

    window.addEventListener('scroll', onScroll, { passive: true });
    onScroll();
  }

  initNav();
  document.addEventListener('astro:page-load', initNav);
</script>
