---
import SectionWrapper from './ui/SectionWrapper.astro';
import FadeIn from './ui/FadeIn.astro';
import { howItWorks } from '../data/content';
---

<SectionWrapper>
  <FadeIn>
    <h2 class="mb-16 text-center text-3xl font-bold tracking-tight md:text-4xl lg:text-5xl">
      {howItWorks.headline}
    </h2>
  </FadeIn>

  <div class="relative">
    <!-- Progress line (desktop) -->
    <div class="absolute top-12 left-0 right-0 hidden h-px bg-gradient-to-r from-transparent via-border to-transparent md:block" aria-hidden="true" />

    <div class="grid gap-12 md:grid-cols-3">
      {howItWorks.steps.map((step, i) => (
        <FadeIn delay={i * 150}>
          <div class="relative text-center">
            <!-- Step number -->
            <div class="mb-6 inline-flex h-16 w-16 items-center justify-center rounded-full border border-border bg-bg-secondary text-lg font-bold text-accent-cyan">
              {step.number}
            </div>

            <h3 class="mb-2 text-xl font-semibold">{step.title}</h3>
            <p class="text-sm text-text-secondary">{step.description}</p>
          </div>
        </FadeIn>
      ))}
    </div>
  </div>
</SectionWrapper>
