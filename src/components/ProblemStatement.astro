---
import SectionWrapper from './ui/SectionWrapper.astro';
import FadeIn from './ui/FadeIn.astro';
import { problem } from '../data/content';

const icons: Record<string, string> = {
  search: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/></svg>`,
  shield: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>`,
  zap: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/></svg>`,
};
---

<SectionWrapper>
  <FadeIn>
    <h2 class="mb-4 text-center text-3xl font-bold tracking-tight md:text-4xl lg:text-5xl">
      {problem.headline}
    </h2>
    <p class="mb-16 text-center text-text-secondary max-w-2xl mx-auto">
      {problem.description}
    </p>
  </FadeIn>

  <div class="grid gap-8 md:grid-cols-3">
    {problem.points.map((point, i) => (
      <FadeIn delay={i * 100}>
        <div class="rounded-xl border border-border bg-bg-card/50 p-8 transition-colors duration-300 hover:border-border-glow">
          <div class="mb-4 inline-flex text-accent-cyan" set:html={icons[point.icon]} />
          <h3 class="mb-3 text-lg font-semibold">{point.title}</h3>
          <p class="text-sm leading-relaxed text-text-secondary">{point.description}</p>
        </div>
      </FadeIn>
    ))}
  </div>
</SectionWrapper>
