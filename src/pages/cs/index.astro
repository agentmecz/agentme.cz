---
import Base from '../../layouts/Base.astro';
import Nav from '../../components/Nav.astro';
import Hero from '../../components/Hero.astro';
import ProblemStatement from '../../components/ProblemStatement.astro';
import Solution from '../../components/Solution.astro';
import HowItWorks from '../../components/HowItWorks.astro';
import TrustVisualizer from '../../components/TrustVisualizer.astro';
import PaymentMethods from '../../components/PaymentMethods.astro';
import TechStack from '../../components/TechStack.astro';
import FAQ from '../../components/FAQ.astro';
import OpenSourceCTA from '../../components/OpenSourceCTA.astro';
import Footer from '../../components/Footer.astro';
import { t } from '../../data/i18n';

const locale = 'cs' as const;
const { site, faq } = t(locale);
---

<Base title={site.title} description={site.description} locale={locale} faqItems={faq.items} siteUrl={site.url} repoUrl={site.repoUrl}>
  <Nav locale={locale} />
  <Hero locale={locale} />
  <ProblemStatement locale={locale} />
  <Solution locale={locale} />
  <HowItWorks locale={locale} />
  <TrustVisualizer locale={locale} />
  <PaymentMethods locale={locale} />
  <TechStack locale={locale} />
  <FAQ locale={locale} />
  <OpenSourceCTA locale={locale} />
  <Footer locale={locale} />
</Base>
